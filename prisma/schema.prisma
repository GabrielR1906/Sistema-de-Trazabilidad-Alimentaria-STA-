datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// Modelo único para la trazabilidad completa del mango
model MangoBatch {
  batchId              String   @id
  // Origen
  harvestDate          String?
  quantity             Float?
  location             String?
  // Transformación
  washingCompleted     Boolean  @default(false)
  packagingCompleted   Boolean  @default(false)
  qualityStatus        String   @default("pending") // pass, fail, pending
  processingDate       String?
  notes                String?
  // Logística
  transportTemperature Float?
  deliveryDate         String?
  destination          String?
  carrier              String?
  
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}