datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// Modelo ÚNICO que contiene toda la información del lote
model MangoBatch {
  batchId              String    @id
  
  // 1. Etapa de Origen (Cosecha)
  harvestDate          DateTime? 
  quantity             Float?
  location             String?
  
  // 2. Etapa de Transformación (Procesamiento)
  washingCompleted     Boolean   @default(false)
  packagingCompleted   Boolean   @default(false)
  qualityStatus        String    @default("pending") // pass, fail, pending
  processingDate       DateTime? 
  processingTemperature Float?   // Campo nuevo para corregir error
  processingDuration    Int?     // Campo nuevo para corregir error
  notes                String?
  
  // 3. Etapa de Logística
  transportTemperature Float?
  deliveryDate         DateTime? 
  destination          String?
  transportType        String?   
  
  // Metadatos
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}